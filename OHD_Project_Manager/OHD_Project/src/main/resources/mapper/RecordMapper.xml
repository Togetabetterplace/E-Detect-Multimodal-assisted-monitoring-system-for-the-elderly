<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 在你的 XML 文件中 -->
<mapper namespace="com.ohd_project.ohd_project.mapper.RecordMapper">
    <select id="getRecordsByCategory" resultType="com.ohd_project.ohd_project.entity.Record">
        <!-- 这里是实际的 SQL 查询语句 -->
        SELECT * FROM record WHERE category = #{category};
    </select>
    <select id="getAllRecords" resultType="com.ohd_project.ohd_project.entity.Record">
        <!-- 这里是实际的 SQL 查询语句 -->
        SELECT * FROM record;
    </select>
</mapper>